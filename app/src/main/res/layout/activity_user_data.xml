<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDataActivity">

    <ProgressBar
        android:id="@+id/progressBarUserData"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <ScrollView
        android:id="@+id/scrollViewUserData"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/edittext_background"
                android:drawableStart="@drawable/ic_name"
                android:drawablePadding="10dp"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:padding="5dp" />

            <EditText
                android:id="@+id/editTextPhone"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="10dp"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:hint="Mobile no."
                android:inputType="phone"
                android:padding="5dp" />

            <Spinner
                android:id="@+id/spinnerGender"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edittext_background"/>

            <Spinner
                android:id="@+id/spinnerMaritalStatus"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edittext_background"/>

            <EditText
                android:id="@+id/editTextAnnualIncome"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background"
                android:drawableStart="@drawable/ic_name"
                android:drawablePadding="10dp"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:hint="Annual Income"
                android:inputType="number"
                android:padding="5dp" />

            <EditText
                android:id="@+id/editTextAddress"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background"
                android:drawableStart="@drawable/ic_name"
                android:drawablePadding="10dp"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:hint="Address"
                android:inputType="textMultiLine"
                android:padding="5dp" />

            <EditText
                android:id="@+id/editTextPincode"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext_background"
                android:drawableStart="@drawable/ic_name"
                android:drawablePadding="10dp"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:hint="Pincode"
                android:inputType="number"
                android:padding="5dp"/>

            <Button
                android:id="@+id/buttonSubmitUserData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_gravity="center_horizontal"
                android:text="Submit" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>