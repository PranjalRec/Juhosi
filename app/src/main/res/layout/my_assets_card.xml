<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:elevation="3dp"
    android:layout_margin="3dp"
    android:background="@color/teal_700"
    android:padding="4dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewPolicyNameMyAssets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/baloo"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewPolicyNumberMyAssets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/textViewPolicyNameMyAssets"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewPremiumMyAssets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Premium"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPolicyNameMyAssets" />

    <TextView
        android:id="@+id/textViewDueDateMyAssets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Due date"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/textViewPolicyNameMyAssets"
        app:layout_constraintTop_toBottomOf="@+id/textViewPolicyNameMyAssets" />
</androidx.constraintlayout.widget.ConstraintLayout>